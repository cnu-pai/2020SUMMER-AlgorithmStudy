import java.util.*;

public class Main {
	public static void main(String args[]) {
		Scanner input = new Scanner(System.in);
		int k = input.nextInt();
		String binary = Integer.toBinaryString(k + 1);
		String before = binary.substring(1);
		for(int i = 0; i < before.length(); i++) {
			if(before.charAt(i) == '0') {
				System.out.print(4);
			}
			else {
				System.out.print(7);
			}
		}
	}
}
